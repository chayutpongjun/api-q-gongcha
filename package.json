{
  "name": "gongcha-queue-api",
  "version": "1.0.0",
  "description": "API Server for Gongcha Queue Management System",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "docker:build": "docker build -t gongcha-api:latest .",
    "docker:run": "docker run -d -p 10001:10001 --name gongcha-api gongcha-api:latest",
    "docker:push": "docker push thanvasu/q-gongcha-api:latest"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.1",
    "mssql": "^10.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^3.0.0"
  },
  "keywords": [
    "queue",
    "management",
    "gongcha",
    "web",
    "realtime",
    "notification"
  ],
  "author": "Gongcha Queue Team",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}